    <style>
      html {
        width: 100%;
        height: 100%;
      }
      body {
        width: 100%;
        height: 100%;
      }
      .float-container {
        width: 100%;
        height: 100%;
      }

      .float-child1 {
        width: 60%;
        height: 100%;
        float: left;
      }
      .float-child2 {
        width: 40%;
        height: 100%;
        float: left;
      }
      .card-body {
        padding: 100px 60px 60px;
      }
    </style>
  </head>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <body>
    <div class="float-container">
      <div
        style="background-color: #ff3533; text-align: center"
        class="float-child1">
				<%= image_tag("logoLogin.svg") %>
				
        <p
          style="
            text-align: center;
            height: 21px;
            width: 406px;
            color: white;
            font: Poppins;
            margin-left: 27%;
            padding-top: 2%;
          "
        >
        </p>

        <img
          style="padding-top: 5%; width: 60%"
          src="logoLogin.svg"
          width="65%"
        />
      </div>

      <div class="float-child2">
        <form action="">
          <div class="container">
            <div class="card-body">
              <h1 style="color: #3d4c71">
                <b> Dobro do≈°li </b> , Molimo logujte se
              </h1>
              <!-- <form action="#!">
                -->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class=>'form-control'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :zapamti  %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class=>'btn btn-block login-btn mb-4', :style=>
                    'background-color: #ff3533;
                    color: white;
                    height: 45px;
                    border-radius: 10px;
										margin-top: 10px;' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
              </form>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>