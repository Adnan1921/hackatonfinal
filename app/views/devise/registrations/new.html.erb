<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <style>
      html {
        width: 100%;
        height: 100%;
      }
      body {
        width: 100%;
        height: 100%;
      }
      .float-container {
        width: 100%;
        height: 100%;
      }

      .float-child1 {
        width: 60%;
        height: 900px;
        float: left;
      }
      .float-child2 {
        width: 40%;
        height: 100%;
        float: left;
      }
      .card-body {
        padding: 150px 60px 60px;
      }
    </style>
  </head>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>
  <body>
    <div class="float-container">
      <div
        style="background-color: #ff3533; text-align: center"
        class="float-child1">
				<%= image_tag('Group.svg',style: 'padding-top:90px;')%>
				
				
        <p
          style="
            text-align: center;
            height: 21px;
            width: 406px;
            color: white;
            font: Poppins;
            margin-left: 27%;
            padding-top: 2%;
          "
        >
        </p>

        <img
          style="padding-top: 5%; width: 60%"
          src="logoLogin.svg"
          width="65%"
        />
				<%= image_tag('logoLogin.svg',style: 'padding-top:0px; width="65%"')%>
				
      </div>

      <div class="float-child2">
        <form action="">
          <div class="container">
            <div class="card-body">
              <h1 style="color: #3d4c71">
                <b> Dobro došli </b> , Molimo registrujte se
              </h1>
              <!-- <form action="#!">
                -->
        
  <div class="field">
    <%= f.label :ime %><br />
    <%= f.text_field :ime, :class=>'form-control' %>
  </div>

  <div class="field">
    <%= f.label :jmbg %><br />
    <%= f.text_field :jmbg, :class=>'form-control' %>
  </div>
	
  <div class="field">
    <%= f.label :broj_knjižice %><br />
    <%= f.text_field :broj, :class=>'form-control' %>
  </div>
	
  
	<div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class=>'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class=>'btn btn-block login-btn mb-4', :style=>
                    'background-color: #ff3533;
                    color: white;
                    height: 55px;
                    border-radius: 10px;
										margin-top: 10px;' %>
  </div>
<% end %>

 <%= render "devise/shared/links" %> 
              </form>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
